<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cat.urv.deim.asm">
    <!-- This is required for Picasso to work. -->
    <uses-permission android:name="android.permission.INTERNET" /> <!-- Used to adjust the work load depending on the type of network the device is -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" /> <!-- Used to load images from the gallery content provider -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".p3.shared.FaqsAdapter"></activity>
        <activity
            android:name=".p3.shared.FaqsActivity"
            android:label="@string/title_activity_faqs" />
        <activity
            android:name=".p2.common.TutorialActivity"
            android:theme="@style/AppTheme.SplashScreen" />
        <activity
            android:name=".p3.shared.CalendarDetailActivity"
            android:label="@string/calendar_detail" />
        <activity
            android:name=".p2.common.ProfileActivity"
            android:label="@string/title_activity_profile" />
        <activity
            android:name=".p2.common.ErrorLoginActivity"
            android:label="@string/title_activity_error_login"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".p2.common.LoginActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".p2.common.SplashActivity"
            android:theme="@style/AppTheme.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".p2.common.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>